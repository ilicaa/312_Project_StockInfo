<Window x:Class="StockApp.DeleteStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Delete Stock" Height="300" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15*" />
            <RowDefinition Height="53*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="Stock Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>

        <TextBox x:Name="StockNameTextBox" Grid.Row="0" Grid.Column="1" Width="200" Margin="5" TextChanged="StockNameTextBox_TextChanged"/>

        <Button x:Name="DeleteButton" Content="Delete" Grid.Row="1" Grid.Column="0" Margin="43,5,0,10" Width="100" HorizontalAlignment="Left" Click="DeleteButton_Click" Grid.ColumnSpan="2"/>

        <Button x:Name="CancelButton" Content="Cancel" Grid.Row="1" Grid.Column="1" Margin="148,5,0,10" Width="100" HorizontalAlignment="Left" Click="CancelButton_Click"/>

        <Button x:Name="BackToDashboardButton" Content="Back to Dashboard" Grid.Row="2" Grid.ColumnSpan="2" Margin="22,52,0,92" Width="336" HorizontalAlignment="Left" Click="BackToDashboardButton_Click"/>

    </Grid>

</Window>




<Window x:Class="StockApp.SearchStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Stock" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Search Stock"/>
            <TextBox x:Name="SearchTextBox"/>
            <Button Content="Search" Click="SearchButton_Click" Margin="10"/>
            <DataGrid x:Name="SearchResultsDataGrid" AutoGenerateColumns="True" Height="200"/>
            <Button Content="Back to Dashboard" Click="BackButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

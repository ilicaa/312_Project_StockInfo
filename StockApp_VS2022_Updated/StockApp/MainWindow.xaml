
<Window x:Class="StockApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Information System" Height="350" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Stock Information System" FontSize="20" HorizontalAlignment="Center"/>
            <Button Content="View Stock List" Click="ViewStockList_Click" Margin="10"/>
            <Button Content="Add New Stock" Click="AddNewStock_Click" Margin="10"/>
            <Button Content="Search Stock" Click="SearchStock_Click" Margin="10"/>
            <Button Content="Exit" Click="Exit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
